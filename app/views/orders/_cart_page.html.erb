<%order = current_order%>
<br><br><br>
<section class="content products">
   <div class="container">
      <article class="product-item product-single" style="     padding: 20px;">
         <div class="row">
            <br>
            <center>
               <h1>  SHOPPING CART</h1>
               <p>Customer Service Questions? 042-111-000-174</p>
            </center>
            <hr>
         </div>
      </article>
   </div>
   <section class="container">
      <div class="col-md-12">
         <%= render "shopping_cart", order: order %>
      <div class="">
         <div class="clear:both"></div>
         <div class="col-md-12">
            <div class="col-md-12">
               <br><br>
               <div class="clear99"></div>
              
               <div class="col-md-12">
               <div class="col-md-9">
               <br><br>
               <hr>
               <% if order.products_total < Shoppe::Order::ORDER_AMOUNT %>
                <p class="pull-right">Congratulations! Enjoy FREE shipping on your order worth Rs 3000 and Above</p>
                <p class="pull-right">Shipping amount fixed = Rs 100 (Nationwide)</p>
               <% end %>
              </div>

               <div class="col-md-3 ipad-button-size">
           
               <aside class="sidebar">
                  <div class="total">
                     <p>
                        <label>Subtotal:</label><!-- --><span><%= number_to_currency order.products_total %></span>
                     </p>
                     <p>
                        <label>Shipping:</label><!-- --><span><%= show_delivery_charges(order) %></span>
                     </p>
                     <p class="final">
                        <label>Grand Total:</label><!-- --><span><%= number_to_currency order.total %></span>
                     </p>
                  </div>
               </aside>
               <br>
               <a style="     width: 100%;" href="<%= products_path %>" class="btn btn-default btn-lg" >Continue Shopping</a>
               <br>
               <a style="    margin-top: 10px; 
                  margin-top: 10px;
                  width: 100%;
                  background: #40B313;
                  color: #fff;   width: 100%;" href="<%= checkout_path %>" class="btn btn-default btn-lg" data-no-turbolink =true>Continue to Checkout</a>
               <center>
                  <%= link_to 'Empty Cart', basket_path, :method => :delete, :class=>"btn btn-link" %>
                  <br>
                  
               </center>
            </div>
         </div>
            </div>
             </div>
         <!--  ....................... -->
      </div>
      </div>
   </section>
</section>
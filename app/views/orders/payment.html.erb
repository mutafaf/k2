<section class="content products">
  <div class="container">
     <article class="product-item product-single" style="     padding: 20px;">
        <div class="row">
           <br>
           <center>
              <h1>Payment Method</h1>
           </center>
           <hr>
        </div>
     </article>
  </div>
  <div  class="container">
     <div class="col-md-12">
      <div class="col-md-6">
         <!-- <h3>Payment Method</h3> -->
      </div>
      <br><br>
      <%= form_tag do %>
      <div class="col-md-6">
         <span class="checkout-bulit">Payment Type*</span>
         <select class="input-checkout">
            <option value="1" selected="selected">Select Payment Type</option>
<!--             <option value="2">Visa</option>
            <option value="3">Maste</option> -->
            <option value="4">Cash On Delivery</option>
         </select>
      </div>
      <div class="col-md-6"> </div>
      <div style="clear:both"></div>
      <br />
      <div class="col-md-6"> 
         <%= submit_tag "Continue", :class=>"btn btn-default btn-lg" %>
      </div>
     </div>
     
     <% end %>
  </div>
</section>

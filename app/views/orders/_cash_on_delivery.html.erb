<br><br><br>
<section class="content products">
   <div class="container">
      <article class="product-item product-single" style="     padding: 20px;">
         <div class="row">
            <br>
            <center>
               <h1> ORDER CONFIRMATION</h1>
            </center>
            <hr>
         </div>
      </article>
   </div>
   <section class="container">
      <div class="col-md-12">
         <div >
            <div class="signin-half col-md-8 ">
               <div class="col-md-12">
                  <h3>Contact Details</h3>
                  <br>
               </div>
               <div class="col-md-8">
                  <h3>Shipping Address</h3>
                  <br><br>
                  <div class="signin-half  no-padding">
                     <div class="col-md-6 " style="padding:0;">
                        <h3>Shipping to:</h3>
                        <p>
                          <%= @order.full_delivery_address %>
                        </p>
                     </div>
                     <div class="col-md-6">
<!--                         <h3>Shipping method:</h3>
                        <p>Ground Shipping  <br>
                           $0.00<br>
                        </p> -->
                     </div>
                     <div style="clear:both"></div>
                     <br><br>
                     <h3>Billing Address</h3>
                     <br>
                     <div class="col-md-6">
                        <h3>Billing to:</h3>
                        <p>
                          <%= @order.full_billing_address %>
                        </p>
                     </div>
                     <div style="clear:both"></div>
                     <br><br>
                     <div class="col-md-6"> 
                     <%= button_to "Complete your order",{}, {:class=>"btn btn-default btn-lg", :'data-toggle'=>"modal", :'data-target'=>"#thankyou", :onclick=>"thankyouPixel(#{@order.total})"} %>
                     </div>
                     <div class="col-md-6"> 
                     <button type="button" class="btn btn-danger btn-lg" data-toggle="modal" data-target="#Cancel-order">Cancel order</button>
                     </div>
                     <div style="clear:both"></div>
                  </div>
                  <%= render "popup_partials/thank_you_popup" %>
                  <%= render "popup_partials/cancel_order_popup" %>
               </div>
            </div>
            <!-- ..................................................... -->
            <%= render "order_summary", order:@order %>
         </div>
      </div>
   </section>
</section>

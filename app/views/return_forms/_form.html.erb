<section class="container">
  <div class="col-md-12">
  <%= form_for @return_form, html: {"data-parsley-validate" => true}   do |f| %>
    <% if @return_form.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@return_form.errors.count, "error") %> prohibited this return_form from being saved:</h2>

        <ul>
        <% @return_form.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div >
      <div class="signin-half col-md-12 ">
        <div class="col-md-6"> 
          <span class="checkout-bulit">Name*</span>
          <%= f.text_field :name,:class=>"input-checkout", :placeholder=>"First Name", :required => true %>

        </div>
        <div class="col-md-6">  
          <span class="checkout-bulit">Email*</span>
          <%= f.email_field :email,:class=>"input-checkout", :placeholder=>"Email", :required => true %>
        </div>
        <div style="clear:both"></div>
        <br>
      </div>

      <div class="signin-half col-md-12 ">
        <div class="col-md-6"> 
          <span class="checkout-bulit">Order Number*</span>
          <%= f.text_field :order_number,:class=>"input-checkout", :placeholder=>"Order Number", :required => true %>

        </div>
        <div class="col-md-6">  
          <span class="checkout-bulit">Serial Number*</span>
          <%= f.text_field :serial_number,:class=>"input-checkout", :placeholder=>"Email", :required => true %>
        </div>
        <div style="clear:both"></div>
        <br>
      </div>

      <div class="signin-half col-md-12 ">
        <div class="col-md-6"> 
          <span class="checkout-bulit">Item Number*</span>
          <%= f.text_field :item_number,:class=>"input-checkout", :placeholder=>"Item Number", :required => true %>

        </div>
        <div class="col-md-6">  
          <span class="checkout-bulit">Return Quantity*</span>
          <%= f.text_field :return_quantity,:class=>"input-checkout", :placeholder=>"Return Quantity", :required => true %>
        </div>
        <div style="clear:both"></div>
        <br>
      </div>

      <div class="signin-half col-md-12 ">
        <div class="col-md-6">  
          <span class="checkout-bulit">Reason*</span>
          <%= f.select :reason, [['CHANGED MY MIND', 'CHANGED MY MIND'], ['WRONG ITEM ORDERED', 'WRONG ITEM ORDERED'], ['NOT THE ONE AS SHOWN','NOT THE ONE AS SHOWN'], ['QUALITY NOT AS EXPECTED','QUALITY NOT AS EXPECTED'], ['ARRIVED DAMAGED','ARRIVED DAMAGED'], ['DEFECTIVE','DEFECTIVE'], ['ARRIVED LATE','ARRIVED LATE'], ['WRONG ITEM SENT','WRONG ITEM SENT'], ['OTHER REASON','OTHER REASON']], {}, :class=>"input-checkout"  %>
        </div>
        <div class="col-md-6"> 
          <span class="checkout-bulit">Description*</span>
          <%= f.text_area :description,:class=>"input-checkout", :placeholder=>"Description", :required => true %>

        </div>
        <div style="clear:both"></div>
        <br>
      </div>

      <div class="signin-half col-md-12 ">
        <div class="col-md-6"> 
          <span class="checkout-bulit">Action Detail*</span>
          <%= f.select :action_detail, [['REFUND PURCHASERS ORIGINAL FORM OF PAYMENT ', 'REFUND PURCHASERS ORIGINAL FORM OF PAYMENT'], ['REPLACE ITEM WITH SAME PRODUCT', 'REPLACE ITEM WITH SAME PRODUCT'], ['REPLACE ITEM WITH SAME PRODUCT','REPLACE ITEM WITH SAME PRODUCT']], {}, :class=>"input-checkout"  %>

        </div>
        <div class="col-md-6">  
          <span class="checkout-bulit">Comments</span>
          <%= f.text_area :comment,:class=>"input-checkout", :placeholder=>"Comments" %>
        </div>
        <div style="clear:both"></div>
        <br>
      </div>

      <div class="signin-half col-md-12 ">
        <div class="col-md-6"> 
        <%= f.submit 'Submit', :class=>"btn btn-default btn-lg" %>
        </div>
        <div class="col-md-6">  
        </div>
        <div style="clear:both"></div>
        <br>
      </div>

    </div>
  <% end %>
  </div>
</section>
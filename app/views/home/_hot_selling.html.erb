<div class="container">
   <div class="row">
      <center>
         <br>
         <h2><span style=" color:#333;">Hot  </span>Selling</h2>
         <p>

         </p>
         <br>
      </center>
      <div id="container" class="cf">
         <div id="main" role="main">
            <section class="slider">
               <div class="flexslider carousel">
                  <ul class="slides">
                     <% @new_arrivals.each do |product| %>
                     <li class="col-md-3">
                        <a href="<%=product_path(product.permalink) %>">
                           <div class="border-shade">
                              <article class="product-item" style="border: solid 1px #fff;">
                              <div class="image-size">
                                 <img  src="<%= product.try(:default_image).try(:path) ? product.try(:default_image).try(:path) : '/assets/placeholder.jpg'  %>" class="img-responsive product_image_size pro-img" alt="">
                                 </div>
                                 <h3>
                                    <%= product.name%>
                                 </h3>
                                 <span class="price">
                                 <ins><span class="amount"><%= number_to_currency product.price %></span></ins>
                                 </span>
                                 <br> <br>
                              </article>
                           </div>
                        </a>
                     </li>
                     <% end %>
                  </ul>
               </div>
            </section>
         </div>
      </div>
      <br><br>
      <center>
         <a style="letter-spacing: 8px;" href="<%= products_path(hot_selling: true) %>" class="btn btn-default btn-lg">Shop Now</a>
      </center>
      <div classs="clear-both"></div>
























   </div>
</div>



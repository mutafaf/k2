<section class="content grid-products border-top" id="just" style="background:#f5f5f6 url(<%= @category.try(:background_image).try(:path)%>) no-repeat; ; background-size: 100% auto; ">
   <div class="container"  style=" ">
      <br> <br> <br> <br>
      <section class="breadcrumb-wrapper" style=" ">
         <div class="container">
            <div class="row">
               <div class="col-xs-12">
                  <center>
                     <% if @category == Shoppe::Product::NEW_ARRIVALS %>
                     <h2 ><span id="category_heading" style=" color:#333;"><%= Shoppe::Product::NEW_ARRIVALS %></span><span style=" color:#333;"></h2>
                     <% elsif @category == Shoppe::Product::HOT_SELLING %>
                     <h2 ><span id="category_heading" style=" color:#333;"><%= Shoppe::Product::HOT_SELLING %></span><span style=" color:#333;"></h2>
                     <% elsif @category.present? %>
                      <h2 ><span id="category_heading" style=" color:#333;"><%= @category.name %></span><span style=" color:#333;">'s </span>Collection</h2>
                     <% end %>
                  </center>
               </div>
            </div>
         </div>
      </section>
      <div class="col-md-12" style="     margin-top: 14px;
         padding-left: 0px;
         border-bottom: solid 1px #aaaaaa;
         margin-bottom: 20px;">
         <div class="col-md-8">
         </div>
         <div class="col-md-4">
         </div>
      </div>
      <h2 class="hidden">Products</h2>
      <div class="row">
         <div class="col-md-2" style="    text-align: right;">
            <%= render "categories_sidebar" %>
         </div>
         <div class="col-sm-10 infinite-table">
            <div class="row grid" id="products">
              <%if @products.present? %>
                <%= render "products" %>
              <%else%>
                <h1 class="text-center products_not_found">No Results Found</h1>
              <%end%>
            </div>
            <p class="pagination hidden">
                <% if @products.present? %>
                <%= link_to_next_page(@products, 'Next Page', :remote => true, params: { pagination: true }) %>
                <% end %>
              </p>
         </div>
      </div>
   </div>
</section>

<div class="modal fade" id="forgot" tabindex="-1" role="dialog">
 <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close button-stype" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

                
            </div>
            <div class="modal-body">
              <div class="signin-half no-padding" style=" border: solid 1px #ddd;padding: 20px;">
                 <h3>Forgot Password?</h3>
                 <div >
                    <div class="clear10"></div>
                    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { "data-parsley-validate" => true, :id => "forget",:method => :post, :role => 'form'}) do |f| %>
                    <p>We'll send password reset instructions. Please provide your email address.</p>
                    <div class="clear20"></div>
                      <%= devise_error_messages! %>
                       <span style="font-size: 18px;">Email address* </span>
                       <%= f.email_field :email, autofocus: true, :class=>"input-checkout", :placeholder=>"Enter Email address", :required=>true, :autocomplete=> :off %>
                       <div style="     margin-bottom: 28px;"></div>
                       <button  style="background: #000;
                          color: #fff;
                          border: none;" class="btn btn-default btn-lg" type="submit">Send</button>
                       <a href="#" class="forgot-pass-link pull-right" data-dismiss="modal" data-toggle="modal" data-target="#login">Login</a>
                    <% end %>
                 </div>
              </div>

            </div>
        </div>
    </div>
</div>


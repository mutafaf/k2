<section class="content products">
  <div class="container">
     <article class="product-item product-single" style="     padding: 20px;">
        <div class="row">
           <br>
           <center>
              <h1>Forgot your password?</h1>
           </center>
           <hr>
        </div>
     </article>
  </div>
  <div  class="container">
     <div class="col-md-12">
       <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, "data-parsley-validate" => true}) do |f| %>
       <%= devise_error_messages! %>
         <div class="">
            <div class="col-md-6"> 
               <span class="checkout-bulit">Email*</span>
               <%= f.email_field :email, autofocus: true, :class=>"input-checkout", :placeholder=>"Email" , :required=>true %>
            </div>
            <div style="clear:both"></div>
            <div class="col-md-6"> 
              <%= f.submit 'Send me reset password instructions', :class=>"btn btn-default btn-lg" %>
            </div>
         </div>
      <% end %>
     </div>
  </div>
</section>
<br><br><br>
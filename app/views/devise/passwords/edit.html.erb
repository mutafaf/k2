<section class="content products">
  <div class="container">
     <article class="product-item product-single" style="     padding: 20px;">
        <div class="row">
           <br>
           <center>
              <h1>Change your password</h1>
           </center>
           <hr>
        </div>
     </article>
  </div>
  <div  class="container">
     <div class="col-md-12">
       <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, "data-parsley-validate" => true }) do |f| %>
       <%= devise_error_messages! %>
       <%= f.hidden_field :reset_password_token %>
         <div class="">
            <div class="col-md-6"> 
               <span class="checkout-bulit">Password*</span>
               <%= f.password_field :password, autocomplete: "off", :class=>"input-checkout", :placeholder=>"Password" , :required=>true  %>
            </div>
            <div class="col-md-6"> 
               <span class="checkout-bulit">Password Confirmation*</span>
               <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"input-checkout", :placeholder=>"Password Confirmation" , :required=>true  %>
            </div>
            <div style="clear:both"></div>
            <div class="col-md-6"> 
              <%= f.submit 'Change password', :class=>"btn btn-default btn-lg" %>
            </div>
         </div>
      <% end %>
     </div>
  </div>
</section>

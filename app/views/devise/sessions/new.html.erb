<section class="content products">
  <div class="container">
     <article class="product-item product-single" style="     padding: 20px;">
        <div class="row">
           <br>
           <center>
              <h1>Log in</h1>
           </center>
           <hr>
        </div>
     </article>
  </div>
  <div  class="container">
     <div class="col-md-12">
       <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {"data-parsley-validate" => true}) do |f| %>
       <%= devise_error_messages! %>
         <div class="">
            <div class="col-md-6"> 
               <span class="checkout-bulit">Email*</span>
               <%= f.email_field :email, autofocus: true, :class=>"input-checkout", :placeholder=>"Email" , :required=>true, :autocomplete=> :off %>
            </div>
            <div class="col-md-6"> 
               <span class="checkout-bulit">Password*</span>
               <%= f.password_field :password, autofocus: true, :class=>"input-checkout", :placeholder=>"Password" , :required=>true, :autocomplete=> :off %>
            </div>
            <div class="col-md-6" style="margin-top:5px;margin-bottom:10px;"> 
               <% if devise_mapping.rememberable? -%>
                   <%= f.check_box :remember_me %>
                   <%= f.label :remember_me %>
               <% end -%>
            </div>

            <div style="clear:both"></div>
            <div class="col-md-6"> 
              <%= f.submit 'Sign in', :class=>"btn btn-default btn-lg" %>
            </div>
         </div>
      <% end %>
     </div>
  </div>
</section>
<br><br><br>